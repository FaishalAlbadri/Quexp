<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_ranking_item"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plusjakartasans"
        android:maxLines="1"
        android:paddingVertical="8dp"
        android:textColor="@color/gray_31"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_number"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@+id/txt_number"
        app:layout_constraintTop_toTopOf="@+id/txt_number" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/plusjakartasansbold"
        android:maxLines="1"
        android:textColor="@color/gray_31"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_number"
        app:layout_constraintLeft_toRightOf="@+id/img_user"
        app:layout_constraintRight_toLeftOf="@+id/txt_trophy"
        app:layout_constraintTop_toTopOf="@+id/txt_number"
        tools:text="Ahmad Faishal Albadri" />

    <TextView
        android:id="@+id/txt_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plusjakartasans"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:textColor="@color/gray_31"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_number"
        tools:text="20 Lencana" />

</androidx.constraintlayout.widget.ConstraintLayout>