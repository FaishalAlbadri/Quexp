<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ranking.RankingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.32" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.67" />

            <ImageView
                android:id="@+id/img_ranking_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_ranking_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/gd_left"
                app:layout_constraintTop_toBottomOf="@+id/img_ranking_1" />

            <TextView
                android:id="@+id/txt_ranking_number_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/silver"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:padding="4dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_ranking_2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_2"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_2"
                app:layout_constraintTop_toBottomOf="@+id/img_ranking_2" />

            <TextView
                android:id="@+id/txt_username_ranking_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_2"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_2"
                app:layout_constraintTop_toBottomOf="@+id/txt_ranking_number_2"
                tools:text="Ahmad Faishal Albadri" />

            <TextView
                android:id="@+id/txt_ranking_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableTint="@color/silver"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_31"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_trophy"
                app:layout_constraintLeft_toLeftOf="@+id/txt_username_ranking_2"
                app:layout_constraintRight_toRightOf="@+id/txt_username_ranking_2"
                app:layout_constraintTop_toBottomOf="@+id/txt_username_ranking_2"
                tools:text="41 Lencana" />

            <ImageView
                android:id="@+id/img_ranking_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/gd_left"
                app:layout_constraintRight_toLeftOf="@+id/gd_right"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_ranking_number_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/gold"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:padding="4dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_ranking_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_1"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_1"
                app:layout_constraintTop_toBottomOf="@+id/img_ranking_1" />

            <TextView
                android:id="@+id/txt_username_ranking_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_1"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_1"
                app:layout_constraintTop_toBottomOf="@+id/txt_ranking_number_1"
                tools:text="Ahmad Faishal Albadri" />

            <TextView
                android:id="@+id/txt_ranking_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableTint="@color/gold"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_31"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_trophy"
                app:layout_constraintLeft_toLeftOf="@+id/txt_username_ranking_1"
                app:layout_constraintRight_toRightOf="@+id/txt_username_ranking_1"
                app:layout_constraintTop_toBottomOf="@+id/txt_username_ranking_1"
                tools:text="43 Lencana" />

            <ImageView
                android:id="@+id/img_ranking_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/gd_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_ranking_2" />

            <TextView
                android:id="@+id/txt_ranking_number_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/bronze"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:padding="4dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_ranking_3"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_3"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_3"
                app:layout_constraintTop_toBottomOf="@+id/img_ranking_3" />

            <TextView
                android:id="@+id/txt_username_ranking_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/plusjakartasansbold"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/img_ranking_3"
                app:layout_constraintRight_toRightOf="@+id/img_ranking_3"
                app:layout_constraintTop_toBottomOf="@+id/txt_ranking_number_3"
                tools:text="Ahmad Faishal Albadri" />

            <TextView
                android:id="@+id/txt_ranking_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableTint="@color/bronze"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/gray_31"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/ic_trophy"
                app:layout_constraintLeft_toLeftOf="@+id/txt_username_ranking_3"
                app:layout_constraintRight_toRightOf="@+id/txt_username_ranking_3"
                app:layout_constraintTop_toBottomOf="@+id/txt_username_ranking_3"
                tools:text="40 Lencana" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_ranking"
                android:nestedScrollingEnabled="false"
                android:paddingVertical="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ranking_3"
                tools:itemCount="4"
                tools:listitem="@layout/item_ranking" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>